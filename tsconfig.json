{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "main/src",
    "outDir": "main/build",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "main/src/*"
      ],
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
  },
  "include": [
    "main/src"
  ],
  "exclude": [
    "main/build",
    "build",
    "ui",
    "scripts",
    "assets",
    "node_modules"
  ]
}